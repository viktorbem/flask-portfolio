{% macro admin_control(type, object) %}

    {% set edit_route = 'admin.edit_' + type %}
    {% set toggle_route = 'admin.toggle_' + type %}

    <a href="{{ url_for(edit_route, object_id=object.id) }}" class="btn btn-outline-primary">Edit</a>
    <form action="{{ url_for(toggle_route, object_id=object.id) }}" class="d-inline-block" method="post">
        <input name="visible" type="hidden" value="{{ not object.visible }}" />
        {% if object.visible %}
            <button class="btn btn-outline-danger">Hide</button>
        {% else %}
            <button class="btn btn-outline-success">Publish</button>
        {% endif %}
    </form>

{% endmacro %}