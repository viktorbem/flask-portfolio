{% extends 'base.j2' %}
{% from 'macros/project_card.j2' import project_card %}

{% block main_content %}

    <section>

        <h1 class="main__title">My Portfolio</h1>
        <p class="main__text">Welcome to my online portfolio. Here you can find some of my projects I've been working
            on, with some description and link to its GitHub page. If you want to learn more or if you want me to help
            you with your project, feel free to contact me.</p>

        <div class="button__row">
            <a href="{{ url_for('pages.contact') }}" class="button button--primary">Contact Me</a>
        </div>

    </section>

    <hr class="main__line">

    <section>

        <div class="project__container">
            {% for project in projects %}
                {{ project_card(project) }}
            {% endfor %}
        </div>

        <div class="button__row">
            <a href="https://github.com/viktorbem" class="button button--primary" target="_blank">Visit my GitHub</a>
        </div>

    </section>

{% endblock %}